{% extends "widpylogin/base_site.html" %}
{% load i18n %}

{% block extrastyle %}{% load adminmedia %}{{ block.super }}<link rel="stylesheet" type="text/css" href="/media/css/login.css" />
															<link rel="stylesheet" type="text/css" href="/media/css/style.css" />

{% block bodyclass %}login{% endblock %}

{% block content_title %}{% endblock %}

{% block breadcrumbs %}{% endblock %}

{% block content %}
{% if error_message %}
<p class="errornote">{{ error_message }}</p>
{% endif %}
<div id="content-main">
<form action="/modificar_perfil/" method="post" id="login-form">
  <div class="form-row">
    <label for="id_username">{% trans 'Username:' %}</label> <input type="text" name="username" id="id_username" />
  </div>
  <div class="form-row">
    <label for="id_nombre">{% trans 'Nombre:' %}</label> <input type="text" name="nombre" id="id_nombre" />
  </div>
  <div class="form-row">
    <label for="id_apellido">{% trans 'Apellido:' %}</label> <input type="text" name="apellido" id="id_apellido" />
  </div>
  <div class="form-row">
    <label for="id_email">{% trans 'Email:' %}</label> <input type="text" name="email" id="id_email" />
  </div>
  <div class="form-row">
    <label for="id_paginaweb">{% trans 'paginaweb:' %}</label> <input type="text" name="paginaweb" id="id_paginaweb" />
  </div>
  <div class="form-row">
    <label for="id_password">{% trans 'Password:' %}</label> <input type="password" name="password" id="id_password" />
  </div>
  <div class="form-row">
    <label for="id_re-password">{% trans 'RePassword:' %}</label> <input type="password" name="repassword" id="id_repassword" />
  </div>
  <div class="form-row">
    <label for="id_nacionalidad">{% trans 'Nacionalidad:' %}</label> <input type="text" name="nacionalidad" id="id_nacionalidad" />
  </div>
  <div class="form-row">
    <label for="id_telefono">{% trans 'Telefono:' %}</label> <input type="text" name="telefono" id="id_telefono" />
  </div>
  <div class="form-row">
    <label for="id_telefono">{% trans 'Fechanacimiento:' %}</label> <input type="text" name="fechanacimiento" id="id_fechanacimiento" />
  </div>
  <div class="submit-row">
    <label>&nbsp;</label><input type="submit" value="{% trans 'Registrar' %}" />
  </div>
</form>

<script type="text/javascript">
document.getElementById('id_username').focus()
</script>
</div>
{% endblock %}

